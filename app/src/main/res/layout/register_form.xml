<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        >
        <TextView
            android:layout_above="@id/emailadr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Account"
            android:layout_marginBottom="10dp"
            android:textSize="35sp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <EditText
            android:id="@+id/emailadr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:layout_centerInParent="true"
            android:layout_above="@id/username"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_above="@id/reg_password_box"
            android:hint="Username"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:id="@+id/reg_password_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:hint="Password"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/reg_terms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_below="@id/reg_password_box"
            android:text="By clicking on Register,  I agree to SurveyApp terms and Privacy Policy."/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#01ffe6"
            android:text="Register"
            android:layout_below="@id/reg_terms"/>

    </RelativeLayout>

</ScrollView>